<h5 class="card-title">Quản lí người dùng</h5>
<a type="button" class="btn btn-primary mt-3 mb-3" href="/admin/users/create">Thêm người dùng</a>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Email</th>
      <th scope="col">Họ</th>
      <th scope="col">Tên</th>
      <th scope="col">Hình ảnh</th>
      <th scope="col">Hành động</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{inc @index}}</th>
      <td>{{this.email}}</td>
      <td>{{this.firstname}}</td>
      <td>{{this.lastname}}</td>
      <td><img src="{{this.image}}" width="80" alt=""></td>
      <td>
        <a type="button" class="btn btn-primary mt-3 mb-3" href="/admin/users/update/{{this.id}}">Sửa</a>
        <button type="button" class="btn btn-danger mt-3 mb-3 delete-btn" data-id="{{this.id}}">Xóa</button>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

<form name="delete-form" method="post"></form>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
  $(document).ready(function () {
    $('.delete-btn').click(function (event) {

      event.preventDefault();
      var userId = $(this).data('id');
      var deleteForm = document.forms['delete-form'];
      if (confirm('Are you sure you want to delete this user?')) {
        deleteForm.action = '/admin/users/' + userId + '?_method=delete';
        deleteForm.submit();
      }
    });
  });
</script>